<STYLES>

#VERSION 1.35

[DEFAULT]
BACKGROUND.COLOUR=#1E0000;
BACKGROUND.TRANSLUCENCY=75%;
TEXT.FONT="HERETIC";
ALT.FONT="HERETIC";
TITLE.FONT="HERETIC";
HELP.FONT="HERETIC";
SOUND.BEGIN  = "DORCLS";
SOUND.END    = "DORCLS";
SOUND.SELECT = "SWITCH";
SOUND.ERROR  = "LOBPOW";
SOUND.MOVE   = "PSTOP";
SOUND.SLIDER = "KEYUP";

[MENU]
BACKGROUND.COLOUR=#1E0000;
BACKGROUND.TRANSLUCENCY=75%;
TEXT.FONT="HERETIC";
ALT.FONT="HERETIC";
TEXT.SCALE=35%;
//ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="HERETIC";
//TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="HERETIC";
//HELP.COLOURMAP="TEXT_GREEN";
SOUND.BEGIN  = "DORCLS"; // Opening up menu!
SOUND.END    = "DORCLS";
SOUND.SELECT = "SWITCH";
SOUND.ERROR  = "LOBPOW";
SOUND.MOVE   = "PSTOP";
SOUND.SLIDER = "KEYUP";

[OPTIONS]
BACKGROUND.COLOUR=#1E0000;
BACKGROUND.TRANSLUCENCY=75%;

// [OPTIONS_TEXT]

TEXT.FONT="HERETIC";
ALT.FONT="HERETIC_BIG";
TITLE.FONT="HERETIC";
ALT.SCALE=0.5;
HELP.FONT="HERETIC_BIG";
HELP.SCALE=0.5;
// [OPTIONS_SOUNDS]
SOUND.BEGIN  = "DORCLS"; // Opening up menu!
SOUND.END    = "DORCLS";
SOUND.SELECT = "SWITCH";
SOUND.ERROR  = "LOBPOW";
SOUND.MOVE   = "PSTOP";
SOUND.SLIDER = "KEYUP";

//ALT.COLOURMAP="TEXT_WHITE";
//TEXT.ASPECT=25%;
//TITLE.COLOURMAP="TEXT_YELLOW";
//HELP.COLOURMAP="TEXT_GREEN";
//TEXT.COLOURMAP="TEXT_PURPLE";

[MESSAGES]
TEXT.FONT="HERETIC";

[CHAT]
TEXT.FONT="HERETIC";
TEXT.COLOURMAP="PLAYER_GREEN";

[AUTOMAP]
BACKGROUND.IMAGE="AUTOPAGE";
TEXT.FONT="HERETIC";
ALT.FONT="AUTOMAP_DIGIT";

[STATS]
TEXT.FONT="STAT_DIGIT";
// don't apply any colourmap
ALT.FONT="STAT_DIGIT";  // par times
// Fixme: sounds !!

[NET_STATS]
TITLE.FONT="HERETIC";
// leave title as red
TEXT.FONT="HERETIC";
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="HERETIC";   // alt used for highlighted player
ALT.COLOURMAP="TEXT_YELLOW";
// Fixme: sounds !!

[RTS_TIP]
TEXT.FONT="HERETIC";
SOUND.BEGIN="TINK";

[CONSOLE]
BACKGROUND.IMAGE="CONSOL_P";
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=75%;
// SPECIAL=TILED;
TEXT.FONT="DOOM";
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="DOOM";
ALT.COLOURMAP="TEXT_YELLOW";

[CAST_SCREEN]
BACKGROUND.IMAGE="BOSSBACK";
TEXT.FONT="HERETIC";
TEXT.COLOURMAP="TEXT_YELLOW";

