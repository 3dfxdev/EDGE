<FONTS>

#VERSION 2.10

[DOOM]
TYPE=PATCH;
PATCHES=STCFN033("!":"_"),STCFN121("|"),
          STCFN132("ä"),STCFN134("å"),STCFN148("ö");  // FIXME: charset
MISSING_PATCH="STCFN000";

[MENU]
TYPE=PATCH;
PATCHES=MENFN033("!":"_"),MENFN121("|"),
          MENFN132("ä"),MENFN134("å"),MENFN148("ö");  // FIXME: charset
MISSING_PATCH="MENFN000";

[HERETIC]
TYPE=PATCH;
PATCHES=FONTA01("!":"Z"),FONTA59("_");

[HERETIC_DIGIT]
TYPE=PATCH;
PATCHES=IN0("0":"9");

[HERETIC_LITTLE]
TYPE=PATCH;
PATCHES=SMALLIN0("0":"9");


[HEXEN]
TYPE=PATCH;
PATCHES=FONTA01("!":"Z"),FONTA59("_");

[HEXEN_BIG]
TYPE=PATCH;
PATCHES=FONTB01("!":"Z");

[BIG_DIGIT]
TYPE=PATCH;
PATCHES=STTNUM0("0":"9"),STTMINUS("-"),STTPRCNT("%");

[STAT_DIGIT]
TYPE=PATCH;
PATCHES=WINUM0("0":"9"),WIMINUS("-"),WIPCNT("%"),WICOLON(":");

[GREY_DIGIT]
TYPE=PATCH;
PATCHES=STGNUM0("0":"9");

[YELLOW_DIGIT]
TYPE=PATCH;
PATCHES=STYSNUM0("0":"9");

[AUTOMAP_DIGIT]
TYPE=PATCH;
PATCHES=AMMNUM0("0":"9");

