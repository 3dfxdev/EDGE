<WEAPONS>

#VERSION 2.10

[PISTOL]
AMMOTYPE=BULLETS;
AMMOPERSHOT=1;
AUTOMATIC=TRUE;
REFIRE_INACCURATE=TRUE;
BINDKEY=2;
PRIORITY=2;
FREE=TRUE;
ATTACK=PLAYER_PISTOL;
KICK=0.002;
STATES(UP)=FMPS:A:1:NORMAL:RAISE;
STATES(DOWN)=FMPS:A:1:NORMAL:LOWER;
STATES(READY)=FMPS:A:1:NORMAL:READY;
STATES(ATTACK)=FMPS:A:4:NORMAL:NOTHING,
               FMPS:B:6:NORMAL:SHOOT,
               FMPS:C:4:NORMAL:NOTHING,
               FMPS:B:5:NORMAL:REFIRE;
STATES(FLASH)=FMPS:A:0:BRIGHT:TRANS_SET(50%),
              FMPS:A:7:BRIGHT:LIGHT1,
              FMPS:A:0:NORMAL:LIGHT0,
              #REMOVE;
