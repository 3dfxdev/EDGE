<STYLES>

#VERSION 2.10

[DEFAULT]
BACKGROUND.COLOUR=#1E0000;
BACKGROUND.TRANSLUCENCY=75%;
BACKGROUND.IMAGE="PLANE2";
//SPECIAL=FORCE_CLAMP;
TEXT.FONT="ROTTFONT";
ALT.FONT="ROTTFONT";
TITLE.FONT="ROTTFONT";
HELP.FONT="ROTTFONT";

[MENU]
BACKGROUND.COLOUR=#1E0000;
BACKGROUND.TRANSLUCENCY=75%;
BACKGROUND.IMAGE="PLANE2";
//SPECIAL=FORCE_CLAMP;
TEXT.FONT="SMALLFON";
ALT.FONT="ROTTFONT";
ALT.COLOURMAP="NORMAL";
TITLE.FONT="ROTTFONT";
TITLE.COLOURMAP="NORMAL";
HELP.FONT="TINYFONT";
HELP.COLOURMAP="NORMAL";
SOUND.BEGIN  = "M_ESC";
SOUND.END    = "M_ESC";
SOUND.SELECT = "M_SELECT";
SOUND.BACK   = "M_INFO";
SOUND.ERROR  = "M_WARNIN";
SOUND.MOVE   = "M_MOVE";
SOUND.SLIDER = "M_FLIP";

[OPTIONS]
BACKGROUND.COLOUR=#1E0000;
BACKGROUND.TRANSLUCENCY=75%;
BACKGROUND.IMAGE="PLANE2";
//SPECIAL=FORCE_CLAMP;
TEXT.FONT="ROTTFONT";
ALT.FONT="SMALLFON";
//ALT.COLOURMAP="TEXT_WHITE";
TITLE.FONT="SMALLFON";
//TITLE.COLOURMAP="TEXT_YELLOW";
HELP.FONT="TINYFONT";
HELP.COLOURMAP="TEXT_WHITE";
SOUND.BEGIN  = "SWITCHN";
SOUND.END    = "SWITCHX";
SOUND.SELECT = "PISTOL";
SOUND.BACK   = "SWITCHN";
SOUND.ERROR  = "OOF";
SOUND.MOVE   = "P_STOP";
SOUND.SLIDER = "STNMOV";

[MESSAGES]
TEXT.FONT="ROTTFONT";

[CHAT]
TEXT.FONT="ROTTFONT";
TEXT.COLOURMAP="TEXT_GREEN";

[AUTOMAP]
BACKGROUND.COLOUR=#000000;
TEXT.FONT="ROTTFONT";
ALT.FONT="AUTOMAP_DIGIT";

[STATS]
TEXT.FONT="STAT_DIGIT";
// don't apply any colourmap
ALT.FONT="STAT_DIGIT";  // par times
// Fixme: sounds !!

[NET_STATS]
TITLE.FONT="ROTTFONT";
// leave title as red
TEXT.FONT="ROTTFONT";
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="ROTTFONT";   // alt used for highlighted player
ALT.COLOURMAP="TEXT_YELLOW";
// Fixme: sounds !!

[RTS_TIP]
TEXT.FONT="ROTTFONT";
SOUND.BEGIN="TINK";

[CONSOLE]
BACKGROUND.IMAGE="MMBKD";
//SPECIAL=FORCE_CLAMP;
TEXT.FONT="SMALLFON";
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="TINYFONT";
ALT.COLOURMAP="TEXT_YELLOW";

[CAST_SCREEN]
BACKGROUND.IMAGE="BOSSBACK";
TEXT.FONT="ROTTFONT";
TEXT.COLOURMAP="TEXT_YELLOW";

