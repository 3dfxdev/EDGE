[15] // Elevator Door
TYPE=PUSH;
ACTIVATORS=PLAYER;
SLIDER.TYPE=RIGHT;
SLIDER.SPEED=2.0;

// ZDOOM ACTION Types

[1012] // Open Door (closes)
TYPE=MANUAL;
ACTIVATORS=PLAYER, MONSTER;
CEILING.TYPE=MOVEWAITRETURN;
CEILING.SPEED_UP=2;
CEILING.SPEED_DOWN=2;
CEILING.DEST_REF=LOSURROUNDINGCEILING;
