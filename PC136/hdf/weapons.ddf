[CHAINSAW]
AMMOTYPE=NOAMMO;
AUTOMATIC=TRUE;
BINDKEY=1;
PRIORITY=1;
ATTACK=PLAYER_GAUNTLETS;
NOTHRUST=TRUE;
START_SOUND=GNTACT;
ENGAGED_SOUND=GNTFUL;
HIT_SOUND=GNTHIT;
FEEDBACK=TRUE;
STATES(UP)=GAUN:A:1:NORMAL:RAISE;
STATES(DOWN)=GAUN:A:1:NORMAL:LOWER;
STATES(READY)=GAUN:A:1:NORMAL:READY;
STATES(WARMUP)=GAUN:B:4:NORMAL:PLAYSOUND(GNTUSE),
               GAUN:C:4:NORMAL:NOTHING;
STATES(ATTACK)=GAUN:D:4:BRIGHT:SHOOT,
               GAUN:E:4:BRIGHT:SHOOT,
               GAUN:F:4:BRIGHT:SHOOT,
               GAUN:C:4:NORMAL:REFIRE,
               GAUN:B:4:NORMAL:NOTHING;
STATES(FLASH)=NULL:A:0:BRIGHT:TRANS_SET(50%),
              NULL:A:2:BRIGHT:LIGHT2,
              NULL:A:2:BRIGHT:LIGHT1,
              NULL:A:0:NORMAL:LIGHT0,
              #REMOVE;

