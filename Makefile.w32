#
# Makefile for EDGE: < Win32 + MinGW >
#
# (Note: requires GNU make)
# 

BIN=gledge32.exe
RES=gledge32.res

SHELL=bash.exe

CC=mingw32-gcc.exe
CPP=mingw32-g++.exe
WINDRES=windres.exe

# External library directories
AL_DIR="c:/program files/OpenAL 1.0 Software Development Kit"
DX_DIR="c:/program files/Microsoft DirectX 9.0 SDK"
OGG_DIR="c:/program files/oggvorbis-win32sdk-1.0.1"
JPEG_DIR="c:/program files/gnuwin32"
PNG_DIR="c:/program files/gnuwin32"
SDL_DIR="c:/program files/SDL-1.2.9"
ZLIB_DIR="c:/program files/gnuwin32"
## HAWK_DIR="hawknl1.68"

# Optimisation level
#OPTIM=-g3
OPTIM=-O2 -ffast-math

# Generated library directories
DEH_DIR=./deh_edge
EPI_DIR=./epi
LZO_DIR=./lzo
GLBSP_DIR=./glbsp

INCS=-Iinclude
        
CXXINCS = -Iinclude \
		  -I./ \
		  -I$(AL_DIR)/include \
		  -I$(DX_DIR)/include \
		  -I$(OGG_DIR)/include \
		  -I$(JPEG_DIR)/include \
		  -I$(PNG_DIR)/include \
		  -I$(SDL_DIR)/include \
		  -I$(ZLIB_DIR)/include

CFLAGS=$(INCS) $(OPTIM) \
       -Wall -fexceptions \
	   -DWIN32 -DDEVELOPERS

CXXFLAGS=$(CXXINCS) $(INCS) $(OPTIM) \
         -Wall -fexceptions \
         -DWIN32 -DDEVELOPERS

# ----- LIBRARIES ------------------------------------------------------

LIBS= \
	-L$(DX_DIR)/lib \
	-mwindows \
	$(AL_DIR)/libs/OpenAL32.lib \
	$(DEH_DIR)/libdehedge.a \
