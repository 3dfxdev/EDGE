<FONTS>

[DOOM]
TYPE = PATCH;
PATCHES = STCFN033("!") - STCFN095("_"), STCFN121("|");
// STCFN132("?"), STCFN134("?"), STCFN148("?")
// MISSING_PATCH = STCFN000;

[BIG_DIGIT]
TYPE = PATCH;
PATCHES = STTNUM0("0") - STTNUM9("9"), STTMINUS("-"), STTPRCNT("%");

[WI_DIGIT]
TYPE = PATCH;
PATCHES = WINUM0("0") - WINUM9("9"), WIMINUS("-"), WIPCNT("%"), WICOLON(":");

[GREY_DIGIT]
TYPE = PATCH;
PATCHES = STGNUM0("0") - STGNUM9("9");

[YELLOW_DIGIT]
TYPE = PATCH;
PATCHES = STYSNUM0("0") - STYSNUM9("9");

[MARK_DIGIT]  // automap
TYPE = PATCH;
PATCHES = AMMNUM0("0") - AMMNUM9("9");

