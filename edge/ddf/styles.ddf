
//
//  some ideas for defining "styles", something very much like 
//  CSS (cascading style sheets) for HTML.  For EDGE, they
//  apply to on-screen elements (text in menus, etc...) and
//  specify sounds too.
//
//  not necessarily limited to one style per screen, e.g. for
//  keyboard options: one style of key names and values, and
//  another style for the move-back/foward and help parts.
//

<STYLES>

[VIDEO_OPTIONS]

BACKGROUND.COLOUR = #888888;
BACKGROUND.TRANSLUCENCY = 25%;
// BACKGROUND.IMAGE = FLAT1;
// BACKGROUND.SCALE = 0.5;   // ASPECT too
// BACKGROUND.FLAGS = TILED;

// BORDER.COLOUR = #CCCCCC;
// BORDER.SIZE = 2;

// text styles for title, main text, and alternative (e.g. for option values)

TEXT.COLOURMAP = "TEXT_RED";  // colourmap name, also COLOUR=#AABBCC
TEXT.FONT   = "DOOM";
TEXT.SCALE  = 0.5;  // make big or small
TEXT.ASPECT = 1.0;  // make tall or wide
TEXT.TRANSLUCENCY = 50%;
TEXT.X_ALIGN = LEFT;    // also: CENTER, RIGHT, JUSTIFIED
TEXT.Y_ALIGN = BOTTOM;  // also: TOP, MIDDLE

// TITLE.COLOUR = XXX;  // etc etc....

// ALT.COLOUR = YYY;

// these are based on current menu code:
SOUND.BEGIN  = "SWITCHN";
SOUND.END    = "SWITCHX";
SOUND.SELECT = "PISTOL";
SOUND.BACK   = "SWITCHN";
SOUND.ERROR  = "OOF";
SOUND.MOVE   = "P_STOP";
SOUND.SLIDER = "STNMOV";

