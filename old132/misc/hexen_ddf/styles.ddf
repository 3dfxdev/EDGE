<STYLES>

#VERSION 1.29

[DEFAULT]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=20%;
TEXT.FONT="HEXEN";
TEXT.COLOURMAP="TEXT_GREEN";
ALT.FONT="HEXEN";
TITLE.FONT="HEXEN";
HELP.FONT="HEXEN";

[MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=20%;
TEXT.FONT="HEXEN";
ALT.FONT="HEXEN";
ALT.COLOURMAP="TEXT_YELLOW";
TITLE.FONT="HEXEN";
TITLE.COLOURMAP="TEXT_WHITE";
HELP.FONT="HEXEN";
HELP.COLOURMAP="TEXT_GREEN";
SOUND.BEGIN  = "SWITCHN";
SOUND.END    = "SWITCHX";
SOUND.SELECT = "PISTOL";
SOUND.BACK   = "SWITCHN";
SOUND.ERROR  = "OOF";
SOUND.MOVE   = "P_STOP";
SOUND.SLIDER = "STNMOV";

[OPTIONS]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=20%;
TEXT.FONT="HEXEN";
ALT.FONT="HEXEN";
ALT.COLOURMAP="TEXT_WHITE";
TITLE.FONT="HEXEN";
TITLE.COLOURMAP="TEXT_YELLOW";
HELP.FONT="HEXEN";
HELP.COLOURMAP="TEXT_GREEN";
SOUND.BEGIN  = "SWITCHN";
SOUND.END    = "SWITCHX";
SOUND.SELECT = "PISTOL";
SOUND.BACK   = "SWITCHN";
SOUND.ERROR  = "OOF";
SOUND.MOVE   = "P_STOP";
SOUND.SLIDER = "STNMOV";

[MESSAGES]
TEXT.FONT="HEXEN";
TEXT.COLOURMAP="TEXT_GREEN";

[CHAT]
TEXT.FONT="HEXEN";
TEXT.COLOURMAP="TEXT_GREEN";

[AUTOMAP]
BACKGROUND.COLOUR=#000000;
TEXT.FONT="HEXEN";
ALT.FONT="AUTOMAP_DIGIT";

[STATS]
TEXT.FONT="STAT_DIGIT";
// don't apply any colourmap
ALT.FONT="STAT_DIGIT";  // par times
// Fixme: sounds !!

[NET_STATS]
TITLE.FONT="HEXEN";
// leave title as red
TEXT.FONT="HEXEN";
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="HEXEN";   // alt used for highlighted player
ALT.COLOURMAP="TEXT_YELLOW";
// Fixme: sounds !!

[RTS_TIP]
TEXT.FONT="HEXEN";
SOUND.BEGIN="TINK";

[CONSOLE]
BACKGROUND.IMAGE="CONSOLE";
SPECIAL=TILED;
TEXT.FONT="HEXEN";
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="HEXEN";
ALT.COLOURMAP="TEXT_YELLOW";

[CAST_SCREEN]
BACKGROUND.IMAGE="BOSSBACK";
TEXT.FONT="HEXEN";
TEXT.COLOURMAP="TEXT_YELLOW";

