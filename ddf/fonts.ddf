[BIG_DIGIT]
TYPE=PATCH;
PATCHES=STTNUM0("0":"9"),STTMINUS("-"),STTPRCNT("%");

[WI_DIGIT]
TYPE=PATCH;
PATCHES=WINUM0("0":"9"),WIMINUS("-"),WIPCNT("%"),WICOLON(":");

[GREY_DIGIT]
TYPE=PATCH;
PATCHES=STGNUM0("0":"9");

[YELLOW_DIGIT]
TYPE=PATCH;
PATCHES=STYSNUM0("0":"9");

[AUTOMAP_DIGIT]
TYPE=PATCH;
PATCHES=AMMNUM0("0":"9");

