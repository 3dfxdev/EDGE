
//
//  some ideas for defining "styles", something very much like 
//  CSS (cascading style sheets) for HTML.  For EDGE, they
//  apply to on-screen elements (text in menus, etc...) and
//  specify sounds too.
//
//  not necessarily limited to one style per screen, e.g. for
//  keyboard options: one style of key names and values, and
//  another style for the move-back/foward and help parts.
//

<STYLES>

#VERSION 1.29

[DEFAULT]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=50%;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";

[MENU]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=50%;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
ALT.COLOURMAP="TEXT_WHITE";
SOUND.BEGIN  = "SWITCHN";
SOUND.END    = "SWITCHX";
SOUND.SELECT = "PISTOL";
SOUND.BACK   = "SWITCHN";
SOUND.ERROR  = "OOF";
SOUND.MOVE   = "P_STOP";
SOUND.SLIDER = "STNMOV";

[OPTIONS]
BACKGROUND.COLOUR=#000000;
BACKGROUND.TRANSLUCENCY=50%;
TEXT.FONT="DOOM";
ALT.FONT="DOOM";
ALT.COLOURMAP="TEXT_WHITE";
SOUND.BEGIN  = "SWITCHN";
SOUND.END    = "SWITCHX";
SOUND.SELECT = "PISTOL";
SOUND.BACK   = "SWITCHN";
SOUND.ERROR  = "OOF";
SOUND.MOVE   = "P_STOP";
SOUND.SLIDER = "STNMOV";

[MESSAGES]
TEXT.FONT="DOOM";

[AUTOMAP]
BACKGROUND.COLOUR=#000080;  // !!!! Testing
TEXT.FONT="DOOM";

[CONSOLE]
BACKGROUND.IMAGE="CONSOLE";
BACKGROUND.SPECIAL=TILED;
TEXT.FONT="DOOM";
TEXT.SCALE=0.5;
TEXT.COLOURMAP="TEXT_WHITE";
ALT.FONT="DOOM";
ALT.SCALE=0.5;
// leave colour as red

[CAST_SCREEN]
BACKGROUND.IMAGE="BOSSBACK";
TEXT.FONT="DOOM";
TEXT.COLOURMAP="TEXT_YELLOW";

